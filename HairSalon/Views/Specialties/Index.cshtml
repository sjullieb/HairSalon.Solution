@using HairSalon.Models;
@{
  Layout = "_Layout";
}
<div class="container center">
  <hr>
  <h1><img class="small" src="~/img/specialty.jpg" alt="specialty logo"> Our specialties</h1>
  @if(Model.Count==0)
  {
    <p>No specialties added</p>
  }
  @if(Model.Count!=0)
  {
    @foreach(Specialty specialty in Model)
    {
      <p><a href="/specialties/@specialty.GetId()">@specialty.GetDescription()</a></p>
    }
  }

  <hr>
</div>

<div class="footer center">
  <div class="container">
    <br>
    <p><a href="/specialties/new">Add specialty</a></p>
    <p><a href="/">Go back to home page</a></p>
  </div>
</div>
