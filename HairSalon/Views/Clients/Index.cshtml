@using HairSalon.Models;
@{
  Layout = "_Layout";
}
<div class="container center">
  <hr>
  <h1><img class="small" src="~/img/clients.png" alt="client logo"> Our clients</h1>
  @if(Model.Count==0)
  {
    <p>No clients added</p>
  }
  @if(Model.Count!=0)
  {
    @foreach(Client client in Model)
    {
      <p><a href="/stylists/@client.GetStylistId()/clients/@client.GetId()">@client.GetName()</a></p>
    }
  }

  <form action='/clients/delete' method="post">
    <button type='submit'>Delete all</button>
  </form>
  <hr>
</div>

<div class="footer center">
  <div class="container">
    <br>
    <p><a href="/">Go back to home page</a></p>
  </div>
</div>
