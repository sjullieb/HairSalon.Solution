@using HairSalon.Models;
@{
  Layout = "_Layout";
}
<div class="container">
  <hr>
  <h1 class="center"><img class="small" src="~/img/clients.png" alt="client logo"> Edit Client</h1>
  <form action="/stylists/@Model["stylist"].GetId()/clients/@Model["client"].GetId()" method="post">
    <div class="form-group">
      <label for="name">Name</label>
      <input id="name" name="name" class="form-control" type="text" value="@Model["client"].GetName()">
      <label for="email">Email</label>
      <input id="email" name="email" class="form-control" type="text" value="@Model["client"].GetEmail()">
      <label for="phoneNumber">Email</label>
      <input id="phoneNumber" name="phoneNumber" class="form-control" type="text" maxlength='15' value="@Model["client"].GetPhoneNumber()">
    </div>
    <div class="center">
      <button type="submit">Save</button>
    </div>
  </form>
  <hr>
</div>

<div class="footer center">
  <div class="container">
    <br>
    <p><a href="/stylists/@Model["stylist"].GetId()">Back to @Model["stylist"].GetName()</a></p>
    <p><a href="/">Go back to home page</a></p>
  </div>
</div>
