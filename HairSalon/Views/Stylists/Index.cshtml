@using HairSalon.Models;

<h1>All stylists</h1>
@if(Model.Count==0)
{
  <p>No stylists available</p>
}
@if(Model.Count!=0)
{
  @foreach(Stylist stylist in Model)
  {
    <p><a href="/stylists/@stylist.GetId()">@stylist.GetName()</a></p>
  }
}

  <p><a href="/stylists/new">Add new stylist</a></p>
