@using HairSalon.Models;

<h1>New stylist</h1>
<form action="/stylists" method="post">
  <label for='name'>Name</label>
  <input id='name' name='name' type='text' required>
  <label for='email'>Email</label>
  <input id='email' name='email' type='text' required>
  <label for='phoneNumber'>Phone number</label>
  <input id='phoneNumber' name='phoneNumber' type='text' maxlength='15' required>
  <label for='schedule'>Schedule</label>
  <input id='schedule' name='schedule' type='text' required>
  <label for='haircutStyles'>Haircut styles</label>
  <input id='haircutStyles' name='haircutStyles' type='text' required>

  <label for="specialtyId">Specialty</label>
  <select id="specialtyId" name="specialtyId">
      @foreach(Specialty specialty in Model)
      {
          <option value="@specialty.GetId()">@specialty.GetDescription()</option>
      }
  </select>

  <button type="submit">Submit</button>
</form>
