@using HairSalon.Models;

<h1>Edit Stylist</h1>
<form action="/stylists/@Model.GetId()" method="post">
  <label for='name'>Name</label>
  <input id='name' name='name' type='text' value=@Model.GetName()>
  <label for='email'>Email</label>
  <input id='email' name='email' type='text' value=@Model.GetEmail()>
  <label for='phoneNumber'>Phone number</label>
  <input id='phoneNumber' name='phoneNumber' type='text' value=@Model.GetPhoneNumber()>
  <label for='schedule'>Schedule</label>
  <input id='schedule' name='schedule' type='text' value=@Model.GetSchedule()>
  <label for='haircutStyles'>Haircut styles</label>
  <input id='haircutStyles' name='haircutStyles' type='text' value=@Model.GetHaircutStyles()>
  <button type="submit">Save</button>
</form>

<a href='/stylists'>Go back to stylists list</a>
